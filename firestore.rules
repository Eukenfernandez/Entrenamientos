rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas permisivas para desarrollo/producci√≥n inicial.
    // Permite leer y escribir a cualquier usuario (incluso no autenticado si auth es null, 
    // pero la app fuerza login en el frontend).
    // Para mayor seguridad en el futuro, cambia "if true" por "if request.auth != null"
    match /{document=**} {
      allow read, write: if true;
    }
  }
}